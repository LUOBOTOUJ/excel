<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vitality.material.mapper.UserDao">

    <insert id="save" parameterType="com.vitality.material.entity.User" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into ylw_user(username,password,role) values(#{username},#{password},#{role})
    </insert>
    
    <select id="findByUsername" parameterType="String" resultType="com.vitality.material.entity.User">
    	select * from ylw_user where username = #{name}
    </select>
    
</mapper>