<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vitality.material.mapper.PoMapper">
    <insert id="insertReturnId" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    insert into tbl_imp_po(prepareReceiptCode,supplierCode,supplierName,factoryInvoice,deleteStatus,create_date)
      VALUES(#{prepareReceiptCode},#{supplierCode},#{supplierName},#{factoryInvoice},#{deleteStatus},#{createDate})
    </insert>

    <select id="selectReceiptInfo" parameterType="string" resultType="hashmap">
      select top 1 * from tbl_inf_exp_receipt where status = 'N' order by receipt_Date
    </select>

    <update id="updateReceiptStatus" parameterType="string">
      update tbl_inf_exp_receipt set status = 'N' where exp_receipt_id = #{id}
    </update>

</mapper>
